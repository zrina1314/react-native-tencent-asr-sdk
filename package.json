{
  "name": "react-native-tencent-cloud-asr-sdk",
  "version": "0.2.0",
  "description": "none",
  "private": true,
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-tencent-cloud-asr-sdk-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib node_modules",
    "build": "bob build",
    "prepare": "bob build",
    "release": "bob build && release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://code.266.com/web3/GameAssetsWallet.git.git"
  },
  "author": "bithong <bithong@boyaa.com> (https://code.266.com/web3/GameAssetsWallet.git)",
  "license": "MIT",
  "bugs": {
    "url": "https://code.266.com/web3/GameAssetsWallet.git/issues"
  },
  "homepage": "https://code.266.com/web3/GameAssetsWallet.git#readme",
  "devDependencies": {
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "15.0.1",
    "@react-native/eslint-config": "0.76.6",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.3.5",
    "del-cli": "^5.1.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "react-native": "^0.76.6",
    "react-native-builder-bob": "^0.35.2",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.7.2"
  },
  "resolutions": {
    "@types/react": "^18.3.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.5.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "âœ¨ Features"
            },
            {
              "type": "perf",
              "section": "ðŸ’¨ Performance Improvements"
            },
            {
              "type": "fix",
              "section": "ðŸ› Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "ðŸ› ï¸ Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "ðŸ“š Documentation"
            }
          ]
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "codegen",
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNTencentCloudAsrSdkSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.tencent.cloud.asr.rn"
    },
    "includesGeneratedCode": true
  },
  "create-react-native-library": {
    "type": "turbo-module",
    "languages": "kotlin-objc",
    "version": "0.45.5"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "engineStrict": false
}
